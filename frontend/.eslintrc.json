{
    "env": {
        "browser": true,
        "es2021": true,
        "jest": true
    },
    "extends": [
        "google",
        "eslint:recommended",
        "plugin:prettier/recommended",
        "plugin:react/recommended"
    ],
    "overrides": [
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "react",
        "prettier"
    ],
    "rules": {
        "prettier/prettier": "error",       // Any prettier error is an ESLint error.
        "react/react-in-jsx-scope": "off",  // Don't force React import.
        "require-jsdoc" : 0                 // Dont' force JSDoc usage.
    }
}
